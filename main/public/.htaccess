# Activation du module de réécriture d'URL :
RewriteEngine on
# RewriteBase "/.../"

#--------------------------------------------------
# ROUTES
#--------------------------------------------------

# ROUTE FORMULAIRE DE CONNEXION
# PATTERN: /users/login/form
# TARGET: ?users=loginForm
RewriteRule ^users\/login\/form$ index.php?users=loginForm [L]

# ROUTE DE CONNEXION
# PATTERN: /users/login
# TARGET: ?users=login
RewriteRule ^users\/login$ index.php?users=login [L]

# ROUTE LISTE DES RECIPES
# PATTERN: /recipes
# TARGET: ?recipes=index
RewriteRule ^recipes$ index.php?recipes=index [L]

# ROUTE DÉTAILS D'UN BOOK
# PATTERN: /books/{id}/{slug}
# TARGET: ?books=show&id=x
RewriteRule ^books\/([1-9][0-9]*)\/([a-z0-9][a-z0-9\-]*)*[a-z0-9]$ index.php?books=show&id=$1 [L]


# ROUTE LISTE DES AUTHORS
# PATTERN: /authors
# TARGET: ?authors=index
RewriteRule ^authors$ index.php?authors=index [L]

# ROUTE DÉTAILS D'UN AUTHOR
# PATTERN: /authors/{id}/{lastname}-{firstname}
# TARGET: ?authors=show&id=x
RewriteRule ^authors/([1-9][0-9]*)/[a-z]+\-[a-z]+$ index.php?authors=show&id=$1 [L]

# --------------------------------------------------
RewriteCond %{REQUEST_URI} !\.(js|css|jpg|gif|zip|png|pdf)$ [NC]
RewriteRule ^(.*)$ index.php [L]
